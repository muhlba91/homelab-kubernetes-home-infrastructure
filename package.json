{
  "name": "@muhlba91/homelab-kubernetes-home-infrastructure",
  "version": "0.0.0",
  "description": "Homelab: Kubernetes Home Cluster - Infrastructure",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "repository": "https://github.com/muhlba91/homelab-kubernetes-home-infrastructure",
  "license": "MIT",
  "keywords": [
    "pulumi",
    "proxmox",
    "homelab",
    "kubernetes"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint --fix",
    "lint": "eslint",
    "watch:build": "tsc -p tsconfig.json -w",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --json build/docs/typedoc.json"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@muhlba91/pulumi-proxmoxve": "^6.0.0",
    "@pulumi/aws": "^6.6.0",
    "@pulumi/command": "^0.11.0",
    "@pulumi/gcp": "^7.0.0",
    "@pulumi/google-native": "^0.32.0",
    "@pulumi/kubernetes": "^4.0.0",
    "@pulumi/pulumi": "^3.65.1",
    "@pulumi/random": "^4.13.0",
    "@pulumi/tls": "^5.0.0",
    "@pulumi/vault": "^6.1.0",
    "@pulumiverse/doppler": "^0.7.0",
    "bcryptjs": "^2.4.3",
    "nunjucks": "^3.2.4",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/nunjucks": "^3.2.2",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-functional": "^6.5.1",
    "eslint-plugin-import": "^2.29.1",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5",
    "typescript-eslint": "7.13.1"
  },
  "files": [
    "build/main",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "prettier": {
    "singleQuote": true
  }
}
