{
  "name": "@muhlba91/homelab-kubernetes-home-infrastructure",
  "version": "0.0.0",
  "description": "Homelab: Kubernetes Home Cluster - Infrastructure",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "repository": "https://github.com/muhlba91/homelab-kubernetes-home-infrastructure",
  "license": "MIT",
  "keywords": [
    "pulumi",
    "proxmox",
    "homelab",
    "kubernetes"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "lint": "eslint src --ext .ts",
    "watch:build": "tsc -p tsconfig.json -w",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --json build/docs/typedoc.json"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@muhlba91/pulumi-proxmoxve": "^5.0.0",
    "@pulumi/command": "^0.7.2",
    "@pulumi/gcp": "^6.55.0",
    "@pulumi/github": "^5.9.1",
    "@pulumi/google-native": "^0.30.0",
    "@pulumi/kubernetes": "^3.26.0",
    "@pulumi/pulumi": "^3.65.1",
    "@pulumi/random": "^4.13.0",
    "@pulumi/tls": "^4.10.0",
    "@pulumiverse/doppler": "^0.0.10",
    "bcryptjs": "^2.4.3",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/nunjucks": "^3.2.2",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^4.1.1",
    "eslint-plugin-import": "^2.25.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.5"
  },
  "files": [
    "build/main",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "prettier": {
    "singleQuote": true
  }
}