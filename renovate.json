{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>muhlba91/renovate-config",
        "github>muhlba91/renovate-config:automerge(patch)",
        "github>muhlba91/renovate-config:automerge(minor)"
    ],
    "packageRules": [
        {
            "matchPackageNames": [
                "siderolabs/*"
            ],
            "automerge": false
        }
    ],
    "enabledManagers": [
        "github-actions",
        "pre-commit",
        "npm",
        "custom.regex"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/(^|/)controlplane\\.yml\\.j2$/"
            ],
            "matchStrings": [
                "# renovate: datasource=(?<datasource>[a-z-]+) packageName=(?<packageName>.+)\\s+image:.+:(?<currentValue>.+)"
            ]
        }
    ]
}