{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":dependencyDashboard",
        ":semanticCommitTypeAll(chore)"
    ],
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0,
    "baseBranches": [
        "main"
    ],
    "enabledManagers": [
        "github-actions",
        "npm",
        "regex"
    ],
    "github-actions": {
        "fileMatch": [
            "^(workflow-templates|\\.github/workflows)/[^/]+\\.ya?ml$",
            "(^|/)action\\.ya?ml$"
        ]
    },
    "npm": {
        "fileMatch": [
            "(^|/)package\\.json$"
        ],
        "rollbackPrs": true,
        "versioning": "npm"
    },
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "(^|/)controlplane\\.yml\\.j2$"
            ],
            "matchStrings": [
                "# renovate: datasource=(?<datasource>[a-z-]+) packageName=(?<packageName>.+)\\s+image:.+:(?<currentValue>.+)"
            ]
        },
        {
            "customType": "regex",
            "fileMatch": [
                "(^|/)Pulumi\\.prod\\.yaml$"
            ],
            "matchStrings": [
                "\\s+installImage:.+:(?<currentValue>.+)"
            ],
            "depNameTemplate": "siderolabs/talos",
            "versioningTemplate": "semver-coerced",
            "datasourceTemplate": "github-releases"
        }
    ]
}